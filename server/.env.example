# Server
NODE_ENV=development
PORT=3001

# Database (Render recommended)
# DATABASE_URL=postgres://user:pass@host:5432/dbname
# Or individual vars:
# DB_HOST=
# DB_PORT=5432
# DB_NAME=
# DB_USER=
# DB_PASSWORD=
# DB_SSL=true

# JWT
JWT_ACCESS_SECRET=change_me_access
JWT_REFRESH_SECRET=change_me_refresh
# In production, access TTL defaults to 10m if unset
#JWT_ACCESS_TTL=10m
JWT_REFRESH_TTL=7d

# Redis
# REDIS_URL=redis://localhost:6379

# SMTP
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# MAIL_FROM=no-reply@example.com

# Admin
# ADMIN_TOKEN=change_me_admin

# Logs
# LOG_LEVEL=info
