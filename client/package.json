{
  "name": "eternal-ascent",
  "version": "1.0.0",
  "description": "Eternal Ascent - Cross-platform application for Desktop, Web, and Mobile",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder",
    "build-electron": "npm run build && npm run electron-pack",
    "build-web": "npm run build",
    "build-mobile": "react-scripts build && npx cap add android && npx cap add ios"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1",
    "framer-motion": "^10.12.16",
    "lucide-react": "^0.263.1",
    "electron": "^25.0.0",
    "concurrently": "^8.0.1",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4",
    "@capacitor/cli": "^5.4.0",
    "@capacitor/core": "^5.4.0",
    "@capacitor/android": "^5.4.0",
    "@capacitor/ios": "^5.4.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.eternalascent.app",
    "productName": "Eternal Ascent",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
